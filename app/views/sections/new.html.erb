<% provide(:title, "Create section") %>
<div class="container">
	<h1>Create section</h1>

	<div class="row">
		<div class="span6 offset3">
			<%= form_for([@product, @section]) do |f| %>

				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :sequence_no %>
				<%= f.text_field :sequence_no %>

				<%= f.label :description %>
				<%= f.text_area :description %>

				<%= f.label :video %>
				<%= f.text_field :video %>

				<%= f.label :notes %>
				<%= f.text_area :notes %>


				<%= f.submit "create section", 
							  class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
