<% provide(:title, "New Product") %>
<div class="container">
	<h1>New Product</h1>

	<div class="row">
		<div class="span6 offset3">
			<%= form_for(@product) do |f| %>

				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :heading %>
				<%= f.text_field :heading %>

				<%= f.label :sub_heading %>
				<%= f.text_field :sub_heading %>

				<%= f.label :price %>
				<%= f.text_field :price %>

				<%= f.label :demo_vid %>
				<%= f.text_area :demo_vid %>				

				<%= f.label :benefits %>
				<%= f.text_area :benefits %>

				<%= f.submit "create product", 
							  class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
